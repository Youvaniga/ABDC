<Window x:Class="ABDC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ABDC"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600">
    <Grid>
        <StackPanel VerticalAlignment="Top">
            <TextBlock Name="lblStatus" FontSize="22" FontWeight="Bold" Margin="20">ADBC</TextBlock>
            
            <TextBlock Name="lblFund" FontSize="18" FontWeight="Bold">Fund</TextBlock>
            <ProgressBar Name="pbrFund" Height="50"></ProgressBar>
            <TextBlock Name="lblPayment" FontSize="18" FontWeight="Bold">Payment</TextBlock>
            <ProgressBar Name="pbrPayment" Height="50"></ProgressBar>
            <TextBlock Name="lblReceipt" FontSize="18" FontWeight="Bold">Receipt</TextBlock>
            <ProgressBar Name="pbrReceipt" Height="50"></ProgressBar>
            <TextBlock Name="lblJournal" FontSize="18" FontWeight="Bold">Journal</TextBlock>
            <ProgressBar Name="pbrJournal" Height="50"></ProgressBar>
            
            <Button Name="btnOk" Click="btnOk_Click" Width="150" Height="50" Margin="50" >Ok</Button>
        </StackPanel>
        
    </Grid>
</Window>
